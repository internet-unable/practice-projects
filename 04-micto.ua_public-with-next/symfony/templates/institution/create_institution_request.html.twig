{% block stylesheets %}
	{{ encore_entry_link_tags('registerPage') }}
	{{ encore_entry_link_tags('createApplication') }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('registerPage') }}
	{{ encore_entry_script_tags('createApplication') }}
{% endblock %}

{% block returnButton %}{% endblock %}
{% block closeButton %}{% endblock %}

{% block title %}Додати медзаклад
