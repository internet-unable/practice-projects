{% if pageCount > 1 %}
    <ul class="pagination">
        {% if previous is defined %}
                 <li class="arrow prev">
                     <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        &laquo;
                        {# &laquo; {{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }} #}
                      </a>
                 </li>
        {% else %}
            <li class="arrow unavailable prev">
                <a>
                    &laquo;
                    {# &laquo; {{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }} #}
                </a>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li class="page">
                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li class="page">
                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                </li>
            {% elseif startPage != 2 %}
                <li class="page dots unavailable">
                    <a>&hellip;</a>
                </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page">
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        {{ page }}
                    </a>
                </li>
            {% else %}
                <li class="page current">
                    <a>{{ page }}</a>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="unavailable dots page">
                        <a>&hellip;</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">
                            {{ pageCount - 1 }}
                        </a>
                    </li>
                {% endif %}
            {% endif %}
            <li class="page">
                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="arrow next">
                <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    &nbsp;&raquo;
                    {# {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }} &nbsp;&raquo; #}
                </a>
            </li>
        {% else %}
            <li class="arrow unavailable next">
                <a>
                    &nbsp;&raquo;
                    {# {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }} &nbsp;&raquo; #}
                </a>
            </li>
        {% endif %}
    </ul>
{% endif %}