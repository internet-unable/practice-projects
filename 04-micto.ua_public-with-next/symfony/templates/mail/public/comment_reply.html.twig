{% extends '/mail/base.html.twig' %}
{% trans_default_domain 'mail' %}



{% block body %}

    <table class="comment-reply">
        <tr class="greeting-title">
            <td>
                <h1>Доброго дня!</h1>
            </td>
        </tr>
        <tr class="greeting-img">
            <td>
                <img width="162" height="161" src="{{ absolute_url(asset('img/comment_reply.png')) }}" alt="Відповідь на коментар">
            </td>
        </tr>
        <tr class="greeting-msg">
            <td>
                <p>Ви отримали відповідь на Ваш відгук </p>
            </td>
        </tr>
        <tr>
            <td>
                <div class="block-title">
                    <p>Зміст відповіді:</p>
                </div>
                <div class="comment-text">
                    <p class="user-name">{{ comment.name | default(comment.name) }}</p>
                    <p>{{ comment.text }}</p>
                </div>
            </td>
        </tr>
        {% if comment.parentItem%}
            <tr>
                <td>
                    <div class="comment-text reply">
                        <p class="user-name">Ваш відгук</p>
                        <p>{{ comment.parentItem.text }}</p>
                    </div>
                </td>
            </tr>
        {% endif %}
        <tr class="link-to-comment-wrapper">
            <td>
                <a class="button primary" href="{{ url }}">Переглянути відповідь</a>
            </td>
        </tr>
    </table>

{% endblock %}
